{% extends 'base.html.twig' %}

{% block title %}Releases{% endblock %}

{% block body %}
    <h1>Releases</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ release.id }}</td>
            </tr>
            <tr>
                <th>Version</th>
                <td>{{ release.version }}</td>
            </tr>
            <tr>
                <th>Changelog</th>
                <td>{{ release.changelog }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ release.file }}</td>
            </tr>
            <tr>
                <th>Md5</th>
                <td>{{ release.md5 }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('releases_index') }}">back to list</a>

    <a href="{{ path('releases_edit', {'id': release.id}) }}">edit</a>

    {{ include('releases/_delete_form.html.twig') }}
{% endblock %}
